<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">


   <mapping type="one-way">
      <class-a>org.ihtsdotools.crs.dto.RequestItem</class-a>
      <class-b>org.ihtsdotools.crs.ws.dto.RequestItemDto</class-b>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>appealDate</a>
         <b>appealDate</b>
      </field>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>targetReleaseDate</a>
         <b>targetReleaseDate</b>
      </field>
      <field>
         <a>request.rfcNumber</a>
         <b>request</b>
      </field>
   </mapping>

   <mapping>
      <class-a>org.ihtsdotools.crs.dto.Request</class-a>
      <class-b>org.ihtsdotools.crs.ws.dto.RequestDto</class-b>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>requestDate</a>
         <b>requestDate</b>
      </field>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>statusDate</a>
         <b>statusDate</b>
      </field>
   </mapping>

   <mapping>
      <class-a>org.ihtsdotools.crs.dto.Request</class-a>
      <class-b>org.ihtsdotools.crs.ws.dto.RequestListItemDto</class-b>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>requestDate</a>
         <b>requestDate</b>
      </field>
      <field custom-converter="org.ihtsdotools.crs.ws.dto.converter.DateAndLongConverter">
         <a>statusDate</a>
         <b>statusDate</b>
      </field>
      <field>
         <a>workItems[0].ticketId</a>
         <b>ticketId</b>
      </field>
      <field>
         <a>workItems[0].requestType</a>
         <b>requestType</b>
      </field>
      <field>
         <a>workItems[0].requestorInternalId</a>
         <b>requestorInternalId</b>
      </field>
   </mapping>

</mappings>